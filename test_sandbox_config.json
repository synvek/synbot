{
  "version": "1.0",
  "app_sandbox": {
    "platform": "auto",
    "filesystem": {
      "readonly_paths": [
        "/usr/lib",
        "/usr/share"
      ],
      "writable_paths": [
        "/tmp",
        "/var/tmp"
      ],
      "hidden_paths": [
        "/etc/shadow",
        "/root"
      ]
    },
    "network": {
      "enabled": true,
      "allowed_hosts": [
        "api.example.com",
        "*.trusted-domain.com"
      ],
      "allowed_ports": [
        80,
        443
      ]
    },
    "resources": {
      "max_memory": "2G",
      "max_cpu": 2.0,
      "max_disk": "10G"
    },
    "process": {
      "allow_fork": false,
      "max_processes": 10
    }
  },
  "tool_sandbox": {
    "image": "ubuntu:22.04",
    "filesystem": {
      "readonly_paths": [],
      "writable_paths": ["/workspace"],
      "hidden_paths": []
    },
    "network": {
      "enabled": false,
      "allowed_hosts": [],
      "allowed_ports": []
    },
    "resources": {
      "max_memory": "1G",
      "max_cpu": 1.0,
      "max_disk": "5G"
    },
    "process": {
      "allow_fork": false,
      "max_processes": 5
    }
  },
  "monitoring": {
    "log_level": "info",
    "log_output": [
      {
        "type": "file",
        "path": "/var/log/sandbox/sandbox.log"
      }
    ],
    "audit": {
      "file_access": true,
      "network_access": true,
      "process_creation": true,
      "violations": true
    },
    "metrics": {
      "enabled": true,
      "interval": 60,
      "endpoint": "http://localhost:9090/metrics"
    }
  }
}
